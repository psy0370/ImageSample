<Window x:Class="ImageSample.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ImageSample"
        mc:Ignorable="d"
        Title="MainWindow" SizeToContent="WidthAndHeight" ResizeMode="NoResize" AllowDrop="True"
        DragOver="Window_DragOver" Drop="Window_Drop">
    <StackPanel>
        <TextBlock x:Name="Info"/>
        <Image x:Name="ProcessedImage" Width="400" Height="400"/>
    </StackPanel>
</Window>
